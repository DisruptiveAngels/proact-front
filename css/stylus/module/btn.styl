.btn
  color white
  text-transform uppercase
  padding .5rem 2.5rem
  border 0
  border-radius 4px
  display inline-block
  text-decoration none
  
  &--search
    shadow()
    background-color $blue
    transition 300ms all ease-in-out
    
    &:hover
      background-color $blue-dark
    
    +below($desktop)
      width 50%