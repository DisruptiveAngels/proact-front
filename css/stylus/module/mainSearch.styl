.mainSearch
  font-size 13px
  
  &-input
    display inline-block
    width 60%
    position relative
    margin-right 1rem
    
    +below($mobile)
      width 100%
      margin-bottom 1rem
    
    &:before
      text-align center
      content url(/img/icon-search.png)
      width 37px
      height 37px
      padding-top 10px
      background-color $black
      position absolute
      top 0
      
  &--index
    max-width 500px
    margin-top 10rem
    margin-right auto
    margin-left auto
    text-align center

  &-title
    background-color none
    color $black
    text-transform uppercase
    font-weight 400
    font-size 3rem
    margin-top 0
    margin-bottom 1.5rem